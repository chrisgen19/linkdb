generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Link {
  id          String   @id @default(cuid())
  url         String   @unique
  title       String?
  image       String?
  favorite    Boolean  @default(false)
  actressId   String?
  actress     Actress? @relation(fields: [actressId], references: [id], onDelete: SetNull)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Actress {
  id        String   @id @default(cuid())
  name      String   @unique
  links     Link[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

