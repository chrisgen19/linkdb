// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  links     Link[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Link {
  id          String   @id @default(cuid())
  url         String
  title       String?
  image       String?
  favorite    Boolean  @default(false)
  actressId   String?
  actress     Actress? @relation(fields: [actressId], references: [id], onDelete: SetNull)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}

model Actress {
  id        String   @id @default(cuid())
  name      String   @unique
  links     Link[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

